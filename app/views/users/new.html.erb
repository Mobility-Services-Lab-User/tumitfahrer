<style type="text/css">
    @font-face {
        font-family: 'Merriweather';
        font-style: normal;
        font-weight: 700;
        src: local('Merriweather Bold'), local('Merriweather-Bold'), url(http://themes.googleusercontent.com/static/fonts/merriweather/v6/ZvcMqxEwPfh2qDWBPxn6nhAPw1J91axKNXP_-QX9CC8.woff) format('woff');
    }


    label.error{
        font-size: small;
        color: red;
        font-style: italic
    }
    .form-control, form input, input { display: block; width: 100%; height: 34px; padding: 6px 12px; font-size: 14px; line-height: 1.428571429; color: #555555; background-color: white; background-image: none; border: 1px solid #cccccc; border-radius: 4px; -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075); box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075); -webkit-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s; transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s; }
    .form-control:focus, input:focus { border-color: #66afe9; outline: 0; -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6); box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(102, 175, 233, 0.6); }
    .form-control[disabled], input[disabled], .form-control[readonly], input[readonly], fieldset[disabled] .form-control, fieldset[disabled] input { cursor: not-allowed; background-color: #eeeeee; opacity: 1; }

    textarea.form-control { height: auto; }
</style>


<% provide(:title, "Sign up") %>
<h1>Sign up for great adventures</h1>

<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <%= form_for(@user, multipart: true) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :first_name %>
        <%= f.text_field :first_name %>

        <%= f.label :last_name %>
        <%= f.text_field :last_name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :department %>
        <%= f.text_field :department %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirmation Password" %>
        <%= f.password_field :password_confirmation %>

       
        <br>
        <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>

  <% end %>

  <% if false %>
  <% end %>
  </div>
</div>
