<%= javascript_include_tag "jquery.tooltipster.min.js" %>
<%= stylesheet_link_tag "tooltipster" %>
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>-
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "TUMitfahrer", root_path, class: "navbar-brand" %>
    </div>
    <div class="navbar-collapse collapse">
      <div class="navbar-right">
        <% if signed_in? %>
            <form class="navbar-form" role="form">
              <%= link_to "Sign out", signout_path, method: "delete", class: "btn btn-primary", style:"height: 29px; padding-top: 2px;" %>
            </form>
        <% else %>
            <form class="navbar-form" role="form">
              <div class="form-group tooltip" title="Email or password is incorrect." style="position: relative; opacity: 0.8">
                <%= text_field_tag "session[email]", "", placeholder: "TUM Email", class: "form-control", style: "color: #c8c8c8; margin-bottom: 0px; background-color: #2B2B2B; border: medium none" %>
              </div>
              <div class="form-group">
                <%= password_field_tag "session[password]", "", placeholder: "Password", class: "form-control", style: "color: #c8c8c8; margin-bottom: 0px; background-color: #2B2B2B; border: medium none" %>
              </div>
              <button type="button" id="sign_in" class="btn btn-info" style="height: 32px; padding-top: 2px;">Sign in</button>
              <%= link_to "Sign up", "/signup", class: "btn btn-primary", style:"height: 32px; padding-top: 2px;" %>
            </form>
        <% end %>
      </div>
    </div><!--/.navbar-collapse -->
    <% if signed_in? %>
        <div class="navbar-collapse collapse">
          <div class="row row-centered">
            <div class="col-md-1 col-centered" style="background: #0F3750; width: 14%; min-width: 100px; color: #beddf1; text-align: center;">
              <p><%= link_to "Timeline", '/timeline', style: "color: #beddf1" %></p>
            </div>
            <div class="col-md-1 col-centered" style="background: #005c91; width: 14%; min-width: 100px; color: #beddf1; text-align: center;">
              <p>Campus</p>
            </div>
            <div class="col-md-1 col-centered" style="background: #005c91; width: 14%; min-width: 100px; color: #beddf1; text-align: center;">
              <p>Activities</p>
            </div>
            <div class="col-md-1 col-centered" style="background: #0076b3; width: 14%; min-width: 100px; color: #beddf1; text-align: center;">
              <p><%= link_to "Create", new_ride_path, style: "color: #beddf1" %></p>
            </div>
            <div class="col-md-1 col-centered" style="background: #0076b3; width: 14%; min-width: 100px; color: #beddf1; text-align: center;">
              <p><%= link_to "Search",'/rides',style: "color: #beddf1" %></p>
            </div>
            <div class="col-md-1 col-centered" style="background: #53A2d0; width: 14%; min-width: 100px; color: #beddf1; text-align: center;">
              <p>My Rides</p>
            </div>
            <div class="col-md-1 col-centered" style="background: #53A2d0; width: 14%; min-width: 100px; color: #beddf1; text-align: center;">
              <p>Profile</p>
            </div>
          </div>
        </div>
        <style>
            .row-centered {
                text-align:center;
            }
            .col-centered {
                display:inline-block;
                float:none;
                /* reset the text-align */
                text-align:left;
                /* inline-block space fix */
                margin-right:-4px;
            }
        </style>
    <% end %>
  </div>
</div>
<script type="text/javascript">
    $(document).ready(function() {
        $('.tooltip').tooltipster({
            trigger: 'custom'
        });

// $("#sign_up").click(function(e) {
// $('#exitpopup').css('left', (window.innerWidth/2 - $('#exitpopup').width()/2));
// $('#exitpopup').css('top', (window.innerHeight/2 - $('#exitpopup').height()/2));
//
//// if(e.pageY <= 5) {
