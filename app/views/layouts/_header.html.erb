// $('#exitpopup').fadeIn();
//// }
// });
// $('#exitpopup_bg').click(function(){
// $('#exitpopup_bg').fadeOut();
// $('#exitpopup').slideUp();
// });

        $("#sign_in").click(function () {
            $.ajax({
                type: "POST",
                url: "/sessions",
                data: { "session[email]": $("#session_email").val(), "session[password]": $("#session_password").val() },
                dataType: "JSON"
            })
                    .done(function (msg) {
                        if (msg.status != "ok")
                            $('.tooltip').tooltipster('show');
                        else
                            location.reload();
                    });
        });

        $(window).keypress(function () {
            $('.tooltip').tooltipster('hide');
        });

    });



</script>

