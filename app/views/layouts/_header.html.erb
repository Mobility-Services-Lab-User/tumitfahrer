<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">TUMitfahrer</a>
    </div>
    <div class="navbar-collapse collapse">
      <div class="navbar-right">
        <% if signed_in? %>
          <button type="button" id="sign_out" class="btn btn-primary" style="height: 32px; padding-top: 2px;">Sign out</button>
        <% else %>
          <form class="navbar-form" role="form">
            <div class="form-group">
              <%= text_field_tag "session[email]", "", placeholder: "TUM Email", class: "form-control", style: "margin-bottom: 0px; background-color: #2B2B2B; border: medium none" %>
            </div>
            <div class="form-group">
              <%= text_field_tag "session[password]", "", placeholder: "Password", class: "form-control", style: "margin-bottom: 0px; background-color: #2B2B2B; border: medium none" %>
            </div>
            <button type="button" id="sign_in" class="btn btn-info" style="height: 32px; padding-top: 2px;">Sign in</button>
            <button type="button" id="sign_up" class="btn btn-primary" style="height: 32px; padding-top: 2px;">Sign up</button>
          </form>
        <% end %>
      </div>
    </div><!--/.navbar-collapse -->
  </div>
</div>
<script type="text/javascript">
    $(document).ready(function() {
        $("#sign_up").click(function(e) {
            $('#exitpopup').css('left', (window.innerWidth/2 - $('#exitpopup').width()/2));
            $('#exitpopup').css('top', (window.innerHeight/2 - $('#exitpopup').height()/2));

//            if(e.pageY <= 5) {
                $('#exitpopup_bg').fadeIn();
                $('#exitpopup').fadeIn();
//            }
        });
        $('#exitpopup_bg').click(function(){
            $('#exitpopup_bg').fadeOut();
            $('#exitpopup').slideUp();
        });

        $("#sign_in").click(function() {
            $.ajax({
                type: "POST",
                url: "/sessions",
                data: { "session[email]": $("#session_email").val(), "session[password]": $("#session_password").val() },
                dataType: "JSON"
            })
            .done(function( msg ) {
                alert( "Data Saved: " + msg );
            });
        });
    });
</script>

<div style="display: none; width:100%; height:100%; position:fixed; background:#000000; opacity: .8; filter:alpha(opacity=0.8); z-index:999998;" id="exitpopup_bg"> </div>
<div class="container" style="margin:0px auto; display:none; position:fixed; color:#ffffff; padding:20px; -webkit-border-radius: 4px; -moz-border-radius: 4px; border-radius: 4px; z-index:999999; background:rgb(20, 20, 20); background:rgba(0, 0, 0, 0.8);" id="exitpopup">
  <h1>Sign Up</h1>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <%= form_for(User.new, multipart: true) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <%= f.label :first_name %>
          <%= f.text_field :first_name %>

          <%= f.label :last_name %>
          <%= f.text_field :last_name %>

          <%= f.label :email %>
          <%= f.text_field :email %>

          <%= f.label :department %>
          <%= f.text_field :department %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.label :password_confirmation, "Confirmation Password" %>
          <%= f.password_field :password_confirmation %>

          <%= f.label :avatar %>
          <%= f.file_field :avatar %>

          <br>
          <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>

      <% end %>
    </div>
  </div>
</div>

