<div class="container_main">
  <% provide(:title, "Feedback page") %>

  <div class="row" class="new_ride_background" id="main_img" style="margin-right: 0px; ">

    <div class="ride_new_page_background">
      <div class="row">
        <div class="col-xs-1 col-md-3">
        </div>
        <div class="col-xs-9 col-md-6" >
          <div class="panel panel-primary" style="width: 70%; border: none;margin-top: 100px;margin-left:100px;background-color: #2B2B2B;">
            <div class="panel-heading" style="background: #2B2B2B;border-color: #2B2B2B">
              <p> <img src='<%= asset_path "logo.png"%>' style="height: 20px;float:left;background-color: #2B2B2B;"> &nbsp; &nbsp;</p>

            </div>
            <div class="panel-body" class="form-horizontal"style="background-color:#2B2B2B ;">
              <%= form_for(@feedback) do |f| %>
                  <%= render 'shared/error_messages', object: f.object %>
                  <div class="form-group">
                    <div class="col-sm-4" style="color:#ffffff">
                      <%= f.label :id,t("user.name"), class: "control-label"%>
                    </div>
                    <div class="col-sm-7">
                      <%= f.text_field :id, class:"form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-4" style="color:#ffffff">
                      <%= f.label :title, t("user.title"), class: "control-label"%>
                    </div>
                    <div class="col-sm-7">
                      <%= f.text_field :title, class:"form-control" %>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-sm-4" style="color:#ffffff">
                      <%= f.label :content, t("user.content"), class: "control-label"%>
                    </div>
                    <div class="col-sm-7">
                      <%= f.text_field :content, class:"form-control" %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-4"style="float:right">
                      <%= f.submit "Send", class: "btn btn-large btn-primary" %>
                    </div>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-xs-1 col-md-3"></div>
      </div>
    </div>
  </div>
</div>
<style>
    .form-control
    {
        background-color: #909090;
        border-color : #909090;

    }
    .control-label
    {
        color: white;
    }
</style>

